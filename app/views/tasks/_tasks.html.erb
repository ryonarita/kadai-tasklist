<ul class="media-list">
  

<% tasks.each do |task| %>

<% user = task.user %>

  <li class="media">
      <div class="media-left">
       <img class="media-object img-rounded" src="
        <%= gravatar_url(current_user, options = { size: 50 }) %>
        " alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %>
          <span class="text-muted">posted at 
              <%= task.created_at %>
          </span>
        </div>
        <div>
          <p>
            内容：<%= task.content %>
          </p>
          <p>
            状態：<%= task.status %>
          </p>
        </div>
        <% if current_user == task.user %>
            <%= link_to "編集", edit_task_path(task), data: { confirm: "編集してもいい?" }, class: 'btn btn-primary btn-xs' %>
        <% end %>
        <% if current_user == task.user %>
            <%= link_to "消去", task, method: :delete, data: { confirm: "消していいの?" }, class: 'btn btn-danger btn-xs' %>
        <% end %>
      </div>
 </li>
  
<% end %>

  
<%= paginate tasks %>

</ul>
